{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@app/*": ["src/app/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/app/onboarding/questionnaire-v2/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
